{
    "openapi": "3.0.0",
    "info": {
        "title": "Player API",
        "version": "1.0.0",
        "description": "Documentação da API para gerenciar jogadores"
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Servidor local"
        }
    ],
    "paths": {
        "/create": {
            "post": {
                "summary": "Cria um novo jogador",
                "description": "Adiciona um novo jogador ao banco de dados",
                "requestBody": {
                    "description": "Dados do jogador a ser criado",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "João Silva"
                                    },
                                    "position": {
                                        "type": "string",
                                        "example": "Atacante"
                                    },
                                    "age": {
                                        "type": "integer",
                                        "example": 25
                                    },
                                    "goals": {
                                        "type": "integer",
                                        "example": 12
                                    },
                                    "assists": {
                                        "type": "integer",
                                        "example": 8
                                    },
                                    "yellowCards": {
                                        "type": "integer",
                                        "example": 3
                                    },
                                    "redCards": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "taxId": {
                                        "type": "string",
                                        "example": "12345678900"
                                    },
                                    "profilePictureUrl": {
                                        "type": "string",
                                        "description": "URL da foto de perfil do jogador",
                                        "example": "https://example.com/profile.jpg"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Jogador criado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "example": "66c12b2b6dc8b2690ff1ed42"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erro ao criar jogador"
                    }
                }
            }
        },
        "/update": {
            "put": {
                "summary": "Atualiza um jogador existente",
                "description": "Atualiza os dados de um jogador existente com base no ID",
                "requestBody": {
                    "description": "Dados do jogador a serem atualizados",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "_id": {
                                        "type": "string",
                                        "description": "ID do jogador",
                                        "example": "66c12b2b6dc8b2690ff1ed42"
                                    },
                                    "name": {
                                        "type": "string",
                                        "example": "João Silva"
                                    },
                                    "position": {
                                        "type": "string",
                                        "example": "Atacante"
                                    },
                                    "age": {
                                        "type": "integer",
                                        "example": 25
                                    },
                                    "goals": {
                                        "type": "integer",
                                        "example": 12
                                    },
                                    "assists": {
                                        "type": "integer",
                                        "example": 8
                                    },
                                    "yellowCards": {
                                        "type": "integer",
                                        "example": 3
                                    },
                                    "redCards": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "taxId": {
                                        "type": "string",
                                        "example": "12345678900"
                                    },
                                    "profilePictureUrl": {
                                        "type": "string",
                                        "description": "URL da foto de perfil do jogador",
                                        "example": "https://example.com/profile.jpg"
                                    }
                                },
                                "required": [
                                    "_id"
