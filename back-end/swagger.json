                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Jogador atualizado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "_id": {
                                            "type": "string",
                                            "description": "ID do jogador atualizado",
                                            "example": "66c12b2b6dc8b2690ff1ed42"
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "João Silva"
                                        },
                                        "position": {
                                            "type": "string",
                                            "example": "Atacante"
                                        },
                                        "age": {
                                            "type": "integer",
                                            "example": 25
                                        },
                                        "goals": {
                                            "type": "integer",
                                            "example": 12
                                        },
                                        "assists": {
                                            "type": "integer",
                                            "example": 8
                                        },
                                        "yellowCards": {
                                            "type": "integer",
                                            "example": 3
                                        },
                                        "redCards": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "taxId": {
                                            "type": "string",
                                            "example": "12345678900"
                                        },
                                        "profilePictureUrl": {
                                            "type": "string",
                                            "description": "URL da foto de perfil do jogador",
                                            "example": "https://example.com/profile.jpg"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erro ao atualizar jogador"
                    }
                }
            }
        },
        "/updateGoals/{id}": {
            "put": {
                "summary": "Atualiza os gols de um jogador",
                "description": "Atualiza o número de gols de um jogador existente com base no ID.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "66c12b2b6dc8b2690ff1ed42"
                        },
                        "description": "ID do jogador cujos gols serão atualizados."
                    }
                ],
                "requestBody": {
                    "description": "Número de gols a ser adicionado ao jogador.",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "goals": {
                                        "type": "integer",
                                        "example": 5
                                    }
                                },
                                "required": [
                                    "goals"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Jogador atualizado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "_id": {
                                            "type": "string",
                                            "description": "ID do jogador atualizado",
                                            "example": "66c12b2b6dc8b2690ff1ed42"
                                        },
                                        "goals": {
                                            "type": "integer",
                                            "description": "Número atualizado de gols",
                                            "example": 17
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erro ao atualizar gols"
                    },
                    "404": {
                        "description": "Jogador não encontrado"
                    }
                }
            }
        },
